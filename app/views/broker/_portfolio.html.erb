<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Company Name</th>
      <th scope="col">Latest Price</th>
    </tr>
  </thead>
  <tbody>
    <% portfolio.each do |stock| %>
      <tr>
        <td><%= stock.ticker %></td>
        <td><%= stock.stock %></td>
        <td><%= stock.price %></td>>
      </tr>
    <% end %>
  </tbody>
</table>
