<% if current_user.verified == false %>
  <%= render "partials/not-verified" %>
<% else %>
  <section class="broker-portfolio">
    <div class="container">
      <h2 class="mb-3 text-center">Portfolio</h2>

      <div class="table-container">
        <table class="table table-hover table-responsive-md">
          <thead class="thead-bg-color sticky-top">
            <tr>
              <th scope="col">Ticker</th>
              <th scope="col">Company Name</th>
              <th scope="col" class="text-center">Latest Price</th>
            </tr>
          </thead>
          <tbody>
            <% portfolio.each do |stock| %>
              <tr>
                <td><%= stock.ticker %></td>
                <td><%= stock.stock %></td>
                <td class="text-center">
                  <%#= stock.price %>
                  <%= 
                    number_with_precision(
                      stock.price, :precision => 2, :delimiter => ','
                    )
                  %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
<% end %>
