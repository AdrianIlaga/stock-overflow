<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Ticker</th>
      <th scope="col">Company Name</th>
      <th scope="col">Latest Price</th>
      <th scope="col">Broker</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% broker_stocks_list.each do |broker_stock| %>
      <tr>
        <% stock = broker_stock.stock %>
        <td><%= stock.ticker %></td>
        <td><%= stock.stock %></td>
        <td><%= stock.price %></td>
        <td><%= broker_stock.user.email %></td>
        <% if current_user.transactions.find_by(broker_stock_id: broker_stock.id) %>
          <td>Stock Added in Portfolio</td>
        <% else %>
          <td><%= link_to "Add Stock", broker_stock_add_path(broker_stock), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
