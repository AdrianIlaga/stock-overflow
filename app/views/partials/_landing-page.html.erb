        <img src="<%= asset_path('broker.jpg') %>" alt="broker" class="img-fluid">
      </div>

      <div class="col-md-5 order-0 order-md-1 d-flex flex-column align-items-center justify-content-center px-lg-5">
        <h2 class="heading text-center mb-lg-4">Broker</h2>
        <p class="lead text-center">Add stock which you can sell to interested buyers.</p>
      </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 py-4 py-md-5 mb-4 mb-lg-5 buyer">
