<section 
  class="hero" 
  style="background-image: url(<%= asset_path('hero.jpg') %>)"
>
  <div class="dark-overlay">
    <%= render "partials/flash" %>
    <div class="container d-flex flex-column h-100 justify-content-around align-items-center">
      <div class="d-flex flex-column align-items-center">
        <h1 class="hero-heading text-center mb-4">STOCK OVERFLOW</h1>

        <p class="lead text-center mb-5">Increase your income by trading stocks, selling high and buying low. With a lot of smarts and a little luck, your stocks will overflow!</p>

        <div class="d-flex flex-column flex-sm-row hero-cta mt-4">
          <%= 
            link_to "Sign Up", 
            new_user_registration_path, 
            class: "btn btn-primary btn-lg mb-3 mb-sm-0 mx-3" 
          %>
          
          <%= 
            link_to "Sign In", 
            new_user_session_path, 
            class: "btn btn-secondary btn-lg mx-3" 
          %>
          
        </div>
      </div>

      <div>
        <a class="btn btn-info btn-lg" href="#learn-more">Learn More</a>
      </div>
    </div>
  </div>
</section>

<%= render "partials/navbar" %>

<section id="learn-more" class="learn-more p-0">
  <div class="container">
    <div class="row row-cols-1 row-cols-md-2 py-4 py-md-5 mt-4 mt-lg-5 broker">
