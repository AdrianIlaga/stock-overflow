<section class="welcome-admin">
  <div class="container">
    <h2 class="text-center">Greetings, <%= @name %>!</h2>

    <div class="options-container">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 mt-4">
        <%= link_to users_index_path, class: "mb-5 options-box" do %>
          <div class="col h-100">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title text-center">
                  Users Index
                </h3>

                <div class="img-fluid mt-3 mt-md-0">
                  <img 
                    src=<%= asset_path('user-list-animate.svg') %> 
                    alt="user-list"
                  >
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= link_to users_pending_path, class: "mb-5 options-box" do %>
          <div class="col h-100">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title text-center">
                  Approval Requests
                </h3>

                <div class="img-fluid mt-3 mt-md-0">
                  <img 
                    src=<%= asset_path('approval-animate.svg') %> 
                    alt="approval-request"
                  >
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= link_to pages_transactions_path, class: "mb-5 options-box" do %>
          <div class="col h-100">
            <div class="card h-100">
              <div class="card-body d-flex flex-column">
                <h3 class="card-title text-center">
                  Transactions
                </h3>

                <div class="img-fluid mt-3 mt-md-0">
                  <img 
                    src=<%= asset_path('transactions-animate.svg') %> 
                    alt="transactions"
                  >
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>  
    </div>
  </div>
</section>
