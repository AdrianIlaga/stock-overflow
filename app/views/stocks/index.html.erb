<%= render "partials/navbar" %>

<% if @user_type == 'broker' %>

  <%= render "broker/stocks", stocks_list: @stocks_list %>

<% elsif @user_type == 'buyer' %>

  <%= render "buyer/stocks", stocks_list: @stocks_list %>

<% end %>
<section>
  <div class="container">
    <h1>All Stocks</h1>

    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Ticker</th>
          <th scope="col">Company Name</th>
          <th scope="col">Latest Price</th>
        </tr>
      </thead>
      <tbody>
        <% @stocks_list.each do |stock| %>
          <tr>
            <td><%= stock.ticker %></td>
            <td><%= stock.stock %></td>
            <td><%= stock.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
